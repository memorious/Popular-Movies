<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_apikey_default"
        android:inputType="text"
        android:key="@string/pref_apikey_key"
        android:singleLine="true"
        android:title="@string/pref_apikey_label" />

    <ListPreference
        android:defaultValue="@string/pref_sort_default"
        android:entries="@array/pref_sort_labels"
        android:entryValues="@array/pref_sort_values"
        android:key="@string/pref_sort_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_sort_label" />

</PreferenceScreen>
